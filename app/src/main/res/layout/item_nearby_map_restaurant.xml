<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="35dp"
    android:id="@+id/nearbyRestaurantCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nearbyRestaurantNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="5dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:fontFamily="@font/almarai_regular"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/nearbyRestaurantImageIV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.25:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nearbyRestaurantNameTv" />

        <TextView
            android:id="@+id/nearbyRestaurantDistanceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/almarai_regular"
            android:textColor="@color/white"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="12dp"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="@+id/nearbyRestaurantImageIV"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/nearbyRestaurantDirectionsIv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/white_circle"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/fork_and_spoon_icon"
            app:layout_constraintBottom_toBottomOf="@+id/nearbyRestaurantDistanceTv"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>