<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/customerDeliveryTitleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/almarai_regular"
            android:singleLine="true"
            android:textColor="@color/light_black"
            android:textAlignment="center"
            android:text="Pending Delivery"
            android:textSize="18sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/customerDeliveryAddressTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/almarai_regular"
            android:maxLines="2"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerDeliveryTitleTv" />


        <TextView
            android:id="@+id/customerDeliveryOrderTimeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/almarai_regular"
            android:maxLines="2"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/customerDeliveryAddressTv"
            app:layout_constraintStart_toStartOf="@+id/customerDeliveryAddressTv"
            app:layout_constraintTop_toBottomOf="@+id/customerDeliveryAddressTv" />


        <TextView
            android:id="@+id/customerDeliveryTotalPriceTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/almarai_regular"
            android:maxLines="2"
            android:visibility="gone"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/customerDeliveryAddressTv"
            app:layout_constraintStart_toStartOf="@+id/customerDeliveryAddressTv"
            app:layout_constraintTop_toBottomOf="@+id/customerDeliveryOrderTimeTv" />


        <TextView
            android:id="@+id/customerRestaurantCountTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/almarai_regular"
            android:maxLines="2"
            android:textColor="@color/light_black"
            android:visibility="gone"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/customerDeliveryAddressTv"
            app:layout_constraintStart_toStartOf="@+id/customerDeliveryTotalPriceTv"
            app:layout_constraintTop_toBottomOf="@+id/customerDeliveryTotalPriceTv" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/customerShowItemsTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/filled_button_background"
            android:elevation="3dp"
            android:fontFamily="@font/amlarai_bold"
            android:paddingVertical="10dp"
            android:text="Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerRestaurantCountTv"
            app:layout_constraintWidth_percent="0.45" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/customerDeliveryCancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/filled_button_background"
            android:elevation="3dp"
            android:fontFamily="@font/amlarai_bold"
            android:paddingVertical="10dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/customerShowItemsTv"
            app:layout_constraintWidth_percent="0.45"
            app:layout_goneMarginBottom="20dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>