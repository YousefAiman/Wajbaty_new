<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/restaurantSearchImageIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/fork_and_spoon_icon"
        app:civ_circle_background_color="@color/shaded_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.13" />

    <TextView
        android:id="@+id/restaurantSearchNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/almarai_regular"
        android:singleLine="true"
        android:text="fdsf sdaf sadf sadf sadf sadf asdf sadf asdfasd fawdasdasd"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/restaurantSearchImageIv"
        app:layout_constraintTop_toTopOf="@+id/restaurantSearchImageIv" />

    <TextView
        android:id="@+id/restaurantSearchDistanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/almarai_regular"
        android:singleLine="true"
        android:text="10km away"
        android:textColor="@color/light_black"
        android:textSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/restaurantSearchImageIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/restaurantSearchImageIv"
        app:layout_constraintTop_toBottomOf="@+id/restaurantSearchNameTv" />

    <View
        android:id="@+id/searchDividerView"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/light_grey"
        app:layout_constraintStart_toStartOf="@+id/restaurantSearchNameTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>