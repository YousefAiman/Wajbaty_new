<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="23dp"
    android:layout_marginTop="2dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/deliveryRequestUserImageIv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_circular_icon"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.17" />

        <TextView
            android:id="@+id/deliveryRequestUserNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/almarai_regular"
            android:singleLine="true"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/deliveryRequestUserImageIv"
            app:layout_constraintEnd_toStartOf="@+id/deliveryRequestRequestedTimeTv"
            app:layout_constraintStart_toEndOf="@id/deliveryRequestUserImageIv"
            app:layout_constraintTop_toTopOf="@+id/deliveryRequestUserImageIv" />


        <TextView
            android:id="@+id/deliveryRequestRequestedTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/almarai_regular"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/deliveryRequestUserImageIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/deliveryRequestUserImageIv" />


        <TextView
            android:id="@+id/deliveryRequestAddressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/almarai_regular"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/deliveryRequestRequestedTimeTv"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/deliveryRequestUserImageIv"
            app:layout_constraintTop_toBottomOf="@+id/deliveryRequestUserImageIv"
            app:layout_constraintWidth_max="wrap" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>